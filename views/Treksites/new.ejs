<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New TrekSite</h1>
    <div class="col-6 offset-3">
        <form action="/treksites" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" placeholder="Title" name="title" id="title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" placeholder="Location" name="location" id="location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="number" id="price" name="price" class="form-control" placeholder="0.00" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url:</label>
                <input class="form-control" type="text" placeholder="Image Url" name="image" id="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" type="number" placeholder="Description" name="description" id="description"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Submit</button>
                <a class="btn btn-secondary mx-1" href="/treksites">Back</a>
            </div>
        </form>
    </div>
</div>